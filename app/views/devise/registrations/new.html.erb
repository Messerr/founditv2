<div class="form-holder">
  <div class="form-signup col-md-4 col-md-push-4 col-sm-4 col-sm-push-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
        <div class="form-login-section col-xs-12 col-md-12">
      <h2>Sign up is easy!</h2>
      <div class="form-group">
          <%= f.text_field :display_name, class: 'form-control', placeholder: "Display Name" %>
        </div>
  <div class="form-group">
      <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "Email" %>
</div>
    <div class="form-group">
    <% if @validatable %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
    </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>

<p>Already a Member?<%= render "devise/shared/links" %></p>
</div>
